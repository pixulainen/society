<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :surname %>
  <%= f.text_field :surname %><br>

  <%= f.label :bio %>
  <%= f.text_field :bio %><br>

  <%= f.label :age %>
  <%= f.text_field :age %><br>

  <%= f.label :"Avatar:  (paste a url link to a picture)" %><br>
  <%= f.text_field :avatar%><br>

  <%= f.submit %>
<% end %>

